{
    "name": "turingarena-server",
    "description": "A platform to host programming competitions",
    "license": "MPL-2.0",
    "repository": "github:turingarena/turingarena",
    "version": "0.2.0-dev",
    "public": true,
    "bin": {
        "turingarena": "./dist/src/cli/index.js",
        "turingarena-serve": "./dist/scripts/serve.js"
    },
    "scripts": {
        "build": "tsc",
        "check:prepare": "npm-run-all --sequential prepare",
        "check:test": "jest",
        "check:tsc": "tsc",
        "check:tslint": "tslint --project .",
        "check": "npm-run-all --sequential check:*",
        "cli": "ts-node -T src/cli/index.ts",
        "debug:serve": "ts-node-dev --inspect-brk --transpile-only scripts/serve.ts",
        "fix:tslint": "tslint --fix --project .",
        "fix": "npm-run-all --sequential fix:*",
        "prepare:graphql-codegen": "ts-node --transpile-only scripts/graphql-codegen.ts",
        "prepare": "npm-run-all --sequential prepare:*",
        "serve": "ts-node --transpile-only scripts/serve.ts",
        "serve-admin": "ts-node --transpile-only scripts/serve-admin.ts",
        "start": "npm run watch:serve",
        "watch:check:test": "jest --watch",
        "watch:check:tsc": "tsc --watch",
        "watch:check:tslint": "onchange '**/*.ts' -- tslint --project . {{changed}}",
        "watch:prepare:graphql-codegen": "ts-node --transpile-only scripts/graphql-codegen.ts --watch",
        "watch:serve": "ts-node-dev --clear --transpile-only scripts/serve.ts",
        "watch:serve-admin": "ts-node-dev --clear --transpile-only scripts/serve-admin.ts"
    },
    "dependencies": {
        "@edomora97/task-maker": "^1.0.2",
        "@types/sqlite3": "^3.1.7",
        "apollo-server-core": "^2.16.1",
        "apollo-server-express": "^2.16.1",
        "commander": "^4.1.1",
        "cors": "^2.8.5",
        "dataloader": "^2.0.0",
        "express": "^4.17.1",
        "graphql": "^14.7.0",
        "graphql-tools": "^4.0.8",
        "jsonwebtoken": "^8.5.1",
        "luxon": "^1.24.1",
        "mime-types": "^2.1.27",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.2",
        "sequelize": "^5.22.3",
        "sequelize-typescript": "^1.1.0",
        "sqlite3": "^4.2.0",
        "ssri": "^7.1.0",
        "uuid": "^3.4.0",
        "which": "^2.0.2",
        "yaml": "^1.10.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.17.7",
        "@graphql-codegen/introspection": "1.11.2",
        "@graphql-codegen/schema-ast": "^1.17.7",
        "@types/bluebird": "^3.5.32",
        "@types/commander": "^2.12.2",
        "@types/jest": "^24.9.1",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/listr": "^0.14.2",
        "@types/lodash": "^4.14.158",
        "@types/luxon": "^1.24.3",
        "@types/mime-types": "^2.1.0",
        "@types/node": "^13.13.15",
        "@types/ssri": "^6.0.3",
        "@types/uuid": "^3.4.9",
        "@types/validator": "^12.0.1",
        "@types/which": "^1.3.2",
        "@types/yaml": "^1.9.7",
        "apollo": "^2.30.2",
        "jest": "^24.9.0",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.6.0",
        "onchange": "^6.1.1",
        "prettier": "^1.19.1",
        "ts-jest": "^24.3.0",
        "ts-loader": "^7.0.5",
        "ts-node": "^8.10.2",
        "ts-node-dev": "^1.0.0-pre.56",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.3.0",
        "typescript": "^4.6.2"
    }
}
